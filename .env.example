# PostgreSQL connection string (with pgvector extension)
DATABASE_URL=postgresql://localhost:5432/prism

# Anthropic API key for LLM summaries and blueprints
ANTHROPIC_API_KEY=

# Embedding provider: "voyage" or "openai"
EMBEDDING_PROVIDER=voyage

# Voyage AI API key (if using voyage embeddings)
VOYAGE_API_KEY=

# OpenAI API key (if using openai embeddings)
OPENAI_API_KEY=

# Azure Entra ID (dashboard auth)
AZURE_TENANT_ID=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=

# Dashboard
DASHBOARD_PORT=3100
SESSION_SECRET=change-me-in-production

# Skip Entra ID auth (set to "true" for local dev / Docker)
SKIP_AUTH=true

# AES-256-GCM key for encrypting stored PATs (hex-encoded, 32 bytes)
CREDENTIAL_ENCRYPTION_KEY=
